CREATE TABLE authors(
    authors_id int(10),
    first_name VARCHAR(100),
    last_name VARCHAR(100),
    biography TEXT,
    DOB DATE
);

CREATE TABLE publishers(
    publisher_id int(10),
    publisher_name VARCHAR(100),
    Country VARCHAR(100)
);

CREATE TABLE books(
    book_id int(10),
    book_title VARCHAR(100),
    isbn VARCHAR(100),
    publication_date DATE,
    Price DECIMAL(10, 2),
    book_key VARCHAR(100)
);

CREATE TABLE book_authors(
   book_id int(10),
   authors_id int(10)
);


--Problem 2

CREATE TABLE patients(
    patient_id int(10),
    patients_firstname VARCHAR(100),
    patients_lastname VARCHAR(100),
    DOB DATE,
    patient_number int(10),
    date_created DATE
);

CREATE TABLE doctors(
    doctors_id int(10),
    doctors_firstname VARCHAR(100),
    doctors_lastname VARCHAR(100),
    speciality VARCHAR(100),
    patient_number int(10),
    license_aquired DATE
);

CREATE TABLE appointments(
    appointment_id int(10),
    patient_id int(10),
    doctors_id int(10),
    date_of_appointment DATE,
    visiting_reason TEXT,
    status VARCHAR(10) 

);

--Problem 3
CREATE TABLE departments(
    department_id int(10),
    departnemnt_name VARCHAR(10),
    department_office_location TEXT
);


CREATE TABLE courses(
    department_id INT(10),
    course_code VARCHAR(10),
    course_title VARCHAR(10),
    no_credits INT(10),
    department_id VARCHAR(10),
    prerequisite_course_id ENUM

);

